<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:background="@color/smoke_primary_light"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_for_ciggerates"
        android:textColor="@color/text_color_white"
        fontPath="fonts/roboto.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="@dimen/large_size"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"/>

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pay_fro_cig"
        android:layout_width="450dp"
        android:layout_height="80dp"
        custom:connectingLineColor="#FFFFFF"
        custom:pinColor="#FFFFFF"
        custom:pinMaxFont="10sp"
        custom:pinRadius="15dp"
        custom:rangeBar="false"
        custom:rangeBarColor="#FFFFFF"
        custom:selectorColor="#FFFFFF"
        custom:temporaryPins="false"
        custom:textColor="#000000"
        custom:tickColor="#FFFFFF"
        custom:tickEnd="100"
        custom:tickStart="1"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/cig_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cigarettes_in_pack"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/large_size"/>

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cig_in_pack"
        android:layout_width="450dp"
        android:layout_height="80dp"
        custom:connectingLineColor="#FFFFFF"
        custom:pinColor="#FFFFFF"
        custom:pinMaxFont="10sp"
        custom:pinRadius="15dp"
        custom:rangeBar="false"
        custom:rangeBarColor="#FFFFFF"
        custom:selectorColor="#FFFFFF"
        custom:temporaryPins="false"
        custom:textColor="#000000"
        custom:tickColor="#FFFFFF"
        custom:tickEnd="30"
        custom:tickStart="1"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cigarettes_in_day"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="265dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/large_size"/>

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cig_in_day"
        android:layout_width="450dp"
        android:layout_height="80dp"
        custom:connectingLineColor="#FFFFFF"
        custom:pinColor="#FFFFFF"
        custom:pinMaxFont="10sp"
        custom:pinRadius="15dp"
        custom:rangeBar="false"
        custom:rangeBarColor="#FFFFFF"
        custom:selectorColor="#FFFFFF"
        custom:temporaryPins="false"
        custom:textColor="#000000"
        custom:tickColor="#FFFFFF"
        custom:tickEnd="50"
        custom:tickStart="1"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Years_of_smoking"
        android:layout_marginTop="385dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/large_size"/>

    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/year_of_smoking"
        android:layout_width="450dp"
        android:layout_height="80dp"
        custom:connectingLineColor="#FFFFFF"
        custom:pinColor="#FFFFFF"
        custom:pinMaxFont="10sp"
        custom:pinRadius="15dp"
        custom:rangeBar="false"
        custom:rangeBarColor="#FFFFFF"
        custom:selectorColor="#FFFFFF"
        custom:temporaryPins="false"
        custom:textColor="#000000"
        custom:tickColor="#FFFFFF"
        custom:tickEnd="80"
        custom:tickStart="1"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="165dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="518dp"
        app:rb_color="@color/smoke_primary_dark"
        app:rb_duration="3000"
        app:rb_radius="12dp"
        app:rb_rippleAmount="4"
        app:rb_scale="6"
        android:layout_centerVertical="true">

    <ImageButton
        android:id="@+id/img_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="47dp"
        android:layout_centerVertical="true"
        android:src="@drawable/smoking"
        android:background="@drawable/round_btn"/>

    </com.skyfishjy.library.RippleBackground>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/until_now_cost"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/large_size"
        android:paddingLeft="650dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/until_noe_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cost_value"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/final_calulated_value"
        android:paddingLeft="650dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/until_now_cost"
        android:textColor="@color/text_color_black"
        android:textSize="15sp"
        android:paddingLeft="650dp"
        android:layout_marginTop="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Daily_cost"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"
        android:layout_marginTop="160dp"
        android:paddingLeft="650dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Weekly_cost"
        android:layout_marginTop="190dp"
        android:paddingLeft="650dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Monthly_cost"
        android:layout_marginTop="220dp"
        android:paddingLeft="650dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Yearly_cost"
        android:layout_marginTop="250dp"
        android:paddingLeft="650dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:id="@+id/daily_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cost_value"
        android:layout_marginTop="160dp"
        android:paddingLeft="900dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:id="@+id/weekly_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cost_value"
        android:layout_marginTop="190dp"
        android:paddingLeft="900dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:id="@+id/monthly_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cost_value"
        android:layout_marginTop="220dp"
        android:paddingLeft="900dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <TextView
        android:id="@+id/yearly_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cost_value"
        android:layout_marginTop="250dp"
        android:paddingLeft="900dp"
        android:textColor="#000000"
        android:textSize="@dimen/large_size"/>

    <Button
        android:id="@+id/smoke_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="720dp"
        android:text="@string/Ready_to_quit"
        android:background="@color/smoke_primary_dark"
        android:padding="12dp"
        android:textSize="@dimen/large_size"
        android:textColor="@color/text_color_white"/>


    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adview"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize = "LEADERBOARD"
        ads:adUnitId = "@string/smoke_banner"/>

</RelativeLayout>